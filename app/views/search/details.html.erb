<%= make_home_path %>
<div class="tab_content">
	<p id="notice"><%= notice %></p>
	<h2>Document Details</h2>
  <%= make_xml_path(request.fullpath) %><br/>
  <%= make_json_path(request.fullpath) %>

	<table class="results">
		<tr>
			<th>Field</th>
			<th>Value</th>
		</tr>
	<% @document.each { |key,val| %>
		<tr>
			<td><%= key %></td>
			<td><%= val.kind_of?(Array) ? raw(val.join("<br />")) : val %></td>
		</tr>
	<% } %>
	</table>

</div>
